{
  "name": "swara-server",
  "description": "A MEAN.js based node-webkit desktop/server application that catalogs your music collection and streams it to the Swara client apps.",
  "version": "0.0.1",
  "author": "The Swara-App Team",
  "engines": {
    "node": "0.10.x",
    "npm": "1.4.x"
  },
  "main": "startup/index.html",
  "node-main": "startup/daemon.js",
  "inject-js-end": "startup/injectJs.js",
  "single-instance": true,
  "window": {
    "title": "Swara Server",
    "width": 1366,
    "height": 768,
    "min_width": 1068,
    "min_height": 600,
    "position": "center",
    "toolbar": true,
    "icon": "public/modules/core/img/icon.png"
  },
  "chromium-args": "--child-clean-exit",
  "node-remote": "<local>",
  "scripts": {
    "start": "grunt",
    "test": "grunt test",
    "postinstall": "bower install --config.interactive=false"
  },
  "dependencies": {
    "ansi-to-html": "^0.3.0",
    "async": "~0.9.0",
    "body-parser": "~1.12.3",
    "bower": "~1.4.1",
    "chalk": "~1.0",
    "compression": "~1.4.3",
    "connect-flash": "~0.1.1",
    "connect-mongo": "~0.8.1",
    "consolidate": "~0.12.1",
    "cookie-parser": "~1.3.4",
    "debug": "^2.1.3",
    "escape-string-regexp": "^1.0.3",
    "event-stream": "^3.3.1",
    "express": "~4.12.3",
    "express-session": "~1.11.1",
    "glob": "~5.0.5",
    "grunt-cli": "~0.1.13",
    "helmet": "~0.9.0",
    "lodash": "~3.8.0",
    "method-override": "~2.3.2",
    "mkdirp": "^0.5.0",
    "moment": "^2.10.2",
    "mongoose": "~4.0.2",
    "morgan": "~1.5.2",
    "musicmetadata": "^1.0.1",
    "nodemailer": "~1.3.4",
    "passport": "~0.2.1",
    "passport-github": "~0.1.5",
    "passport-google-oauth": "~0.2.0",
    "passport-local": "~1.0.0",
    "passport-twitter": "~1.0.3",
    "socket.io": "^1.3.5",
    "swig": "~1.4.2",
    "tree-kill": "0.0.6",
    "walk": "^2.3.9"
  },
  "devDependencies": {
    "supertest": "~0.15.0",
    "should": "~6.0.1",
    "grunt-env": "~0.4.4",
    "grunt-node-inspector": "~0.2.0",
    "grunt-contrib-watch": "~0.6.1",
    "grunt-contrib-jshint": "~0.11.2",
    "grunt-contrib-csslint": "^0.4.0",
    "grunt-ng-annotate": "~0.10.0",
    "grunt-contrib-uglify": "~0.9.1",
    "grunt-contrib-cssmin": "~0.12.2",
    "grunt-nodemon": "~0.4.0",
    "grunt-concurrent": "~1.0.0",
    "grunt-mocha-test": "~0.12.7",
    "grunt-karma": "~0.10.1",
    "load-grunt-tasks": "~3.1.0",
    "karma": "~0.12.31",
    "karma-jasmine": "~0.3.5",
    "karma-coverage": "~0.3.1",
    "karma-chrome-launcher": "~0.1.8",
    "karma-firefox-launcher": "~0.1.4",
    "karma-phantomjs-launcher": "~0.1.4"
  }
}
